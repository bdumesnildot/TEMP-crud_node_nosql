{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "semi": [2, "always"],
    "require-yield": 0,
    "strict": ["error", "global"],
    "no-unused-vars": ["error", { "vars": "all", "args": "none" }],
    "quotes": [2, "single", { "avoidEscape": true }],
    "space-before-function-paren": ["error", "never"],
    "use strict": true
  }
}
